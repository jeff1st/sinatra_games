<h1>Welcome to the Game</h1>

<div class="inputs">
  <select name="field1" form="inputs">
    <option type="text" name="yellow" value="yellow" <%= "selected" if sel[0] == 1 %> >yellow</option>
    <option type="text" name="blue" value="blue" <%= "selected" if sel[0] == 2 %> >blue</option>
    <option type="text" name="red" value="red" <%= "selected" if sel[0] == 3 %> >red</option>
    <option type="text" name="green" value="green" <%= "selected" if sel[0] == 4 %> >green</option>
    <option type="text" name="pink" value="pink" <%= "selected" if sel[0] == 5 %> >pink</option>
    <option type="text" name="orange" value="orange" <%= "selected" if sel[0] == 6 %> >orange</option>
  </select>

  <select name="field2" form="inputs">
    <option type="text" name="yellow" value="yellow" <%= "selected" if sel[1] == 1 %> >yellow</option>
    <option type="text" name="blue" value="blue" <%= "selected" if sel[1] == 2 %> >blue</option>
    <option type="text" name="red" value="red" <%= "selected" if sel[1] == 3 %> >red</option>
    <option type="text" name="green" value="green" <%= "selected" if sel[1] == 4 %> >green</option>
    <option type="text" name="pink" value="pink" <%= "selected" if sel[1] == 5 %> >pink</option>
    <option type="text" name="orange" value="orange" <%= "selected" if sel[1] == 6 %> >orange</option>
  </select>

  <select name="field3" form="inputs">
    <option type="text" name="yellow" value="yellow" <%= "selected" if sel[2] == 1 %> >yellow</option>
    <option type="text" name="blue" value="blue" <%= "selected" if sel[2] == 2 %> >blue</option>
    <option type="text" name="red" value="red" <%= "selected" if sel[2] == 3 %> >red</option>
    <option type="text" name="green" value="green" <%= "selected" if sel[2] == 4 %> >green</option>
    <option type="text" name="pink" value="pink" <%= "selected" if sel[2] == 5 %> >pink</option>
    <option type="text" name="orange" value="orange" <%= "selected" if sel[2] == 6 %> >orange</option>
  </select>

  <select name="field4" form="inputs">
    <option type="text" name="yellow" value="yellow" <%= "selected" if sel[3] == 1 %> >yellow</option>
    <option type="text" name="blue" value="blue" <%= "selected" if sel[3] == 2 %> >blue</option>
    <option type="text" name="red" value="red" <%= "selected" if sel[3] == 3 %> >red</option>
    <option type="text" name="green" value="green" <%= "selected" if sel[3] == 4 %> >green</option>
    <option type="text" name="pink" value="pink" <%= "selected" if sel[3] == 5 %> >pink</option>
    <option type="text" name="orange" value="orange" <%= "selected" if sel[3] == 6 %> >orange</option>
  </select>

  <% if remains != 0 && res != ["O", "O", "O", "O"] %>
    <form action="/game" method="get" id="inputs">
      <input type="submit">
    </form>

    <h2><%= message %></h2>

  <% else %>
    <h2><%= message %></h2>
    </br>
    <h2>Do you want to play again?</h2>
    <form action="/reset" method="get">
      <input type="submit">
    </form>
  <% end %>

</div>
<div class="results">
  <table>
    <% results.each do |result| %>
    <tr>
      <td id="<%= result[0] %>"><%= result[0] %></td>
      <td id="<%= result[1] %>"><%= result[1] %></td>
      <td id="<%= result[2] %>"><%= result[2] %></td>
      <td id="<%= result[3] %>"><%= result[3] %></td>
      <td>
        <table>
          <tr>
            <td><%= result[4][0] %></td>
            <td><%= result[4][1] %></td>
          </tr>
          <tr>
            <td><%= result[4][2] %></td>
            <td><%= result[4][3] %></td>
          </tr>
          <tr>
            <td><%= " " %></td>
          </tr>
        </table>
      </td>
    </tr>
    <% end %>
  </table>
</div>
